+     */
+    function receiveFlashLoan(
+        IERC20[] memory tokens,
+        uint256[] memory amounts,
+        uint256[] memory,
+        bytes memory
+    ) external override {
+        _require(msg.sender == address(_vault), Errors.CALLER_NOT_VAULT);
+        tokens[0].safeTransfer(address(_vault), amounts[0]);
+    }
+}
